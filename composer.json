{
    "name": "wyrihaximus/react-http-middleware-resume-response-body",
    "description": "react/http middleware that resumes response bodies if they are streaming",
    "license": "MIT",
    "authors": [
        {
            "name": "Cees-Jan Kiewiet",
            "email": "ceesjank@gmail.com"
        }
    ],
    "require": {
        "php": "^8 || ^7.4",
        "psr/http-message": "^1.0.1",
        "react/event-loop": "^1.2",
        "react/http": "^1.5",
        "react/promise": "^2.8",
        "react/stream": "^1.2"
    },
    "require-dev": {
        "ringcentral/psr7": "^1.2.2",
        "wyrihaximus/async-test-utilities": "^4.0.8"
    },
    "autoload": {
        "psr-4": {
            "WyriHaximus\\React\\Http\\Middleware\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WyriHaximus\\React\\Tests\\Http\\Middleware\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "infection/extension-installer": true,
            "ergebnis/composer-normalize": true,
            "icanhazstring/composer-unused": true
        },
        "platform": {
            "php": "7.4.7"
        },
        "sort-packages": true
    },
    "scripts": {
        "post-install-cmd": [
            "composer normalize",
            "composer update --lock --no-scripts"
        ],
        "post-update-cmd": [
            "composer normalize",
            "composer update --lock --no-scripts"
        ]
    }
}
